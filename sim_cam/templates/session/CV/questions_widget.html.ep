<h2>Questions</h2>
<% my $count = 0; %>
<% foreach my $q ( @{$questions} ) {  $count++;  %> 
<p> <%= $count %>) <%= $q->{name} %> </p>
<table class="table table-bordered">
  <% my $cc = 0; %>
  <% foreach my $answer ( @{ $q->{answers} } ) { %>
<tr>

      <td style="text-align:center; vertical-align:middle">
      <input type="radio" name="<%=$count%>" value="<%= $cc++ %>" selected="true">
      </td>
    <td>
   <%= $answer %>
    </td>
 </tr>

  <% } %>

</table>

<% } %>



